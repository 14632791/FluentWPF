<Window x:Class="FluentWPFSample.Views.AccentColorsSample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FluentWPFSample.Views"
        xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
        mc:Ignorable="d"
        Title="AccentColorsSample" Height="480" Width="300">
    <Grid>
        <WrapPanel ItemWidth="100" ItemHeight="100">
            <Rectangle HorizontalAlignment="Center" Height="83" Stroke="Black" VerticalAlignment="Center" Width="83">
                <Rectangle.Fill>
                    <SolidColorBrush Color="{x:Static fw:AccentColors.ImmersiveSystemAccent}" />
                </Rectangle.Fill>
            </Rectangle>

            <Rectangle HorizontalAlignment="Center" Height="83" Stroke="Black" VerticalAlignment="Center" Width="83">
                <Rectangle.Fill>
                    <SolidColorBrush Color="{x:Static fw:AccentColors.ImmersiveSystemAccentDark1}" />
                </Rectangle.Fill>
            </Rectangle>

            <Rectangle HorizontalAlignment="Center" Height="83" Stroke="Black" VerticalAlignment="Center" Width="83">
                <Rectangle.Fill>
                    <SolidColorBrush Color="{x:Static fw:AccentColors.ImmersiveSystemAccentDark2}" />
                </Rectangle.Fill>
            </Rectangle>

            <Rectangle HorizontalAlignment="Center" Height="83" Stroke="Black" VerticalAlignment="Center" Width="83">
                <Rectangle.Fill>
                    <SolidColorBrush Color="{x:Static fw:AccentColors.ImmersiveSystemAccentDark3}" />
                </Rectangle.Fill>
            </Rectangle>

            <Rectangle HorizontalAlignment="Center" Height="83" Stroke="Black" VerticalAlignment="Center" Width="83">
                <Rectangle.Fill>
                    <SolidColorBrush Color="{x:Static fw:AccentColors.ImmersiveSystemAccentLight1}" />
                </Rectangle.Fill>
            </Rectangle>

            <Rectangle HorizontalAlignment="Center" Height="83" Stroke="Black" VerticalAlignment="Center" Width="83">
                <Rectangle.Fill>
                    <SolidColorBrush Color="{x:Static fw:AccentColors.ImmersiveSystemAccentLight2}" />
                </Rectangle.Fill>
            </Rectangle>

            <Rectangle HorizontalAlignment="Center" Height="83" Stroke="Black" VerticalAlignment="Center" Width="83">
                <Rectangle.Fill>
                    <SolidColorBrush Color="{x:Static fw:AccentColors.ImmersiveSystemAccentLight3}" />
                </Rectangle.Fill>
            </Rectangle>
        </WrapPanel>
    </Grid>
</Window>
