<Window x:Class="FluentWPFSample.Views.DropShadowPanelSample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FluentWPFSample.Views"
        xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
        mc:Ignorable="d"
        Title="DropShadowPanelSample" Height="400" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <fw:DropShadowPanel>
            <Border Padding="50, 30" BorderBrush="Black" BorderThickness="2" Background="Beige" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="TextBlock" FontSize="18" />
            </Border>
        </fw:DropShadowPanel>

        <Grid Grid.Column="1">
            <Grid.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="20"/>
            </Grid.Effect>
            <Border Padding="50, 30" BorderBrush="Black" BorderThickness="2" Background="Beige" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="TextBlock" FontSize="18" />
            </Border>
        </Grid>

    </Grid>
</Window>
